<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.washington.group7.info498.pctrpzzl.PictureChoiceActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start from picture on phone"
        android:id="@+id/pictBtn"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take a picture"
        android:id="@+id/cameraBtn"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/pictBtn"
        android:layout_alignRight="@+id/pictBtn"
        android:layout_alignEnd="@+id/pictBtn"
        android:layout_alignLeft="@+id/pictBtn"
        android:layout_alignStart="@+id/pictBtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start from default picture (testing)"
        android:id="@+id/defaultBtn"
        android:layout_marginBottom="27dp"
        android:layout_above="@+id/pictBtn"
        android:layout_alignLeft="@+id/pictBtn"
        android:layout_alignStart="@+id/pictBtn"
        android:layout_alignRight="@+id/pictBtn"
        android:layout_alignEnd="@+id/pictBtn" />
</RelativeLayout>
