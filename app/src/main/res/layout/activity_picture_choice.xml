<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.washington.group7.info498.pctrpzzl.PictureChoiceActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/full_logo"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:src="@drawable/full_logo"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Start with default picture"
        android:id="@+id/defaultBtn"
        android:layout_below="@+id/full_logo"
        android:layout_marginTop="75dp"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Start with picture on phone"
        android:id="@+id/pictBtn"
        android:layout_below="@+id/defaultBtn"
        android:layout_marginTop="25dp"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Take a new picture"
        android:id="@+id/cameraBtn"
        android:layout_below="@+id/pictBtn"
        android:layout_marginTop="25dp"

        />

</RelativeLayout>
